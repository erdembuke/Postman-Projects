							"    pm.expect(response.booking.bookingdates.checkin).is.eql(pm.environment.get(\"bookingCheckin\"));\r",
							"    pm.expect(response.booking.bookingdates.checkout).is.eql(pm.environment.get(\"bookingCheckout\"));\r",
							"});\r",
							"\r",
							""
						],
