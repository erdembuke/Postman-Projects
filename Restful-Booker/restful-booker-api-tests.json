		{
			"name": "Get Bookings",
			"event": [
				{
					"listen": "test",
					"script": {
						"id": "20734d60-e26f-4252-8ded-b2823521d81d",
						"exec": [
							"pm.test('Status code is 200', function () {\r",
							"    pm.response.to.have.status(200);\r",
							"})\r",
							"\r",
							"var jsonData = pm.response.json();\r",
							"\r",
							"var bookingIds = [];\r",
							"\r",
							"jsonData.forEach(function (booking) {\r",
							"    bookingIds.push(booking.bookingid);\r",
							"})\r",
							"\r",
							"pm.test(\"Check if all booking ids are present in the 'bookingId' collection\", function() {\r",
							"    var savedBookingIds = pm.collectionVariables.get(\"bookingId\");\r",
							"\r",
							"    // Loop through each booking id and check if it exists in the saved collection\r",
							"    bookingIds.forEach(function(id) {\r",
							"        pm.expect(savedBookingIds.values).includes(id.toString());\r",
							"    });\r",
							"});\r",
							"\r",
							""
						],
						"type": "text/javascript"
					}
				}
